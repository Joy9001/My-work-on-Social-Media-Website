                        <div class="add-people-btn mr-2 flex cursor-pointer items-center justify-center rounded-lg pt-1 max-md:hidden" id="add-people-btn">
                            <div>
                                <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 32 32" xml:space="preserve" width="35px" height="35px" fill="#000000" class="icon">
                                    <use xlink:href="#icon-add-people"></use>
                                </svg>
                            </div>
                        </div>

                        <!-- add user popup -->
                        <div id="add-people-popup" class="popup top-19 absolute z-30 hidden h-96 w-64 rounded-lg border-2 border-black p-4 shadow-lg max-md:hidden">
                            <h1 class="pl-2 text-xl font-bold">New Chat</h1>

                            <div class="popup-search mt-3 flex h-10 rounded-lg border-2 border-slate-600" title="Search People">

                                <input type="search" name="popup-search" id="popup-search" placeholder="Search People" class=" ml-1 w-full bg-[#F3F8FF] pl-1 outline-none" />
                                <button class="w-[2.8rem] mr-[0.2rem] add-people-search-btn">
                                    <img class="h-full w-full hover:scale-105 hover:duration-300" src="/assets/3844432_magnifier_search_zoom_icon.png" alt="Search">
                                </button>
                            </div>

                            <!-- all users -->
                            <div class="popup-people-all mt-2 flex h-[calc(100%-6rem)] grow flex-col overflow-y-auto">
                                <% peopleToAdd.forEach((element) => { %>
                                <div class="popup-people" data-id="<%= btoa(element._id) %>" data-element="<%= btoa(JSON.stringify(element)) %>" onclick="addPeopleToChat(this)">
                                    <% if(element.profilePic) { %>
                                    <img src="<%=element.profilePic %>" alt="User" />
                                    <% } else { %>
                                    <img src="https://avatar.iran.liara.run/username?username=<%= element.fullName.replace(' ', '+') %>" alt="User" />
                                    <% } %>
                                    <h3>
                                        <%= element.fullName %>
                                    </h3>
                                </div>
                                <% }) %>
