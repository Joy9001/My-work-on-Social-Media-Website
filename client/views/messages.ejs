                        </div>
                    </div>
                </div>

                <!-- chats end -->
                <div id="chats-end" class="absolute bottom-0 flex hidden h-16 w-full flex-row items-center justify-between shadow-2xl bg-[#b2aef4] p-2 *:mx-1">
                    <!-- emoji -->
                    <div id="emoji-btn" class="cursor-pointer max-sm:hidden">
                        <div id="emoji-popup-btn" class="emoji-popup-btn flex h-8 w-8 items-center justify-center hover:scale-110 hover:duration-200">
                            <img src="/assets/smile.png" alt="Emoji" />
                        </div>

                        <div id="emoji-popup" class="popup absolute bottom-16 left-0 hidden h-80 w-[24rem] rounded-lg border-1 ml-1 mb-1 border-black p-3 shadow-lg z-50">
                            <div class="p-2 text-xl font-bold">
                                <h1>Emoji</h1>
                            </div>

                            <emoji-picker class="light"></emoji-picker>
                        </div>
                    </div>

                    <!-- message input area -->
                    <div class="flex w-[93%] items-center justify-center">
                        <textarea id="msg-input" cols="30" rows="10" placeholder="Type a message..." type="text" class="h-10 w-full resize-none flex-wrap rounded-md p-2 outline-none"></textarea>
                    </div>

                    <!-- send button -->
                    <div id="send-btn">
                        <div class="flex h-8 w-8 cursor-pointer items-start justify-center rounded-full mt-1 mr-1">
                            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" width="30px" height="30px" x="0" y="0" viewBox="0 0 512.005 512.005" style="enable-background:new 0 0 512 512" xml:space="preserve" class="hover:scale-110 hover:duration-200 icon">
                                <use xlink:href="#icon-send"></use>
                            </svg>
                        </div>
