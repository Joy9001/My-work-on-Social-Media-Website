      </div>

      <!-- Right Part -->
      <div class="flex space-x-2 lg:pl-[10vw] items-center">
        <!-- Create -->
        <div
          class="create-post-button flex justify-center  group rounded-xl  items-center h-[80%] px-2 hover:scale-105 hover:bg-lightpurple duration-200">
