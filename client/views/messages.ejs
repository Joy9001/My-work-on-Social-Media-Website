    <!-- body -->
    <div class="people_body absolute h-[calc(100%-3.5rem)] w-full">
      <!-- Transparent Overlay -->
      <div id="transparent-overlay" class="hidden z-10 h-screen w-screen fixed top-0 left-0"></div>

      <!-- Overlay -->
      <div id="postcard-see-more-popup-overlay"
        class="hidden z-10 h-screen w-screen backdrop-blur-sm  fixed top-0 left-0"></div>

      <!-- people main -->
      <div class="people_main absolute flex h-full w-full flex-row bg-transparent">

        <!-- left bar - all people -->
        <div class="all_people absolute flex h-full w-1/4 flex-col border-r-[1px] border-[#071952] gradviolet">
          <!-- heading -->
          <div
            class="heading w-[100% - 2rem] m-4 flex h-16 items-center justify-between rounded-lg border-2 border-[#dee2ff] bg-[#dee2ff] shadow-md">
            <!-- title -->
            <div class="ml-4 text-xl font-bold max-lg:text-lg max-md:text-base max-sm:text-sm">
              <h1>People</h1>
            </div>

            <div>
              <!-- add user btn -->
              <div
                class="add-people-btn mr-2 flex cursor-pointer items-center justify-center rounded-lg pt-1 max-md:hidden"
                id="add-people-btn">
                <div>
                  <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                    viewBox="0 0 32 32" xml:space="preserve" width="35px" height="35px" fill="#000000" class="icon">
                    <use xlink:href="#icon-add-people"></use>
                  </svg>
                </div>
              </div>

              <!-- add user popup -->
              <div id="add-people-popup"
                class="popup top-19 absolute z-30 hidden h-96 w-64 rounded-lg border-2 border-black p-4 shadow-lg max-md:hidden">
                <h1 class="pl-2 text-xl font-bold">New Chat</h1>

                <div class="popup-search mt-3 flex h-10 rounded-lg border-2 border-slate-600" title="Search People">

                  <input type="search" name="popup-search" id="popup-search" placeholder="Search People"
                    class=" ml-1 w-full bg-[#F3F8FF] pl-1 outline-none" />
                  <button class="w-[2.8rem] mr-[0.2rem]">
                    <img class="h-full w-full hover:scale-105 hover:duration-300"
                      src="/assets/3844432_magnifier_search_zoom_icon.png" alt="Search">
                  </button>
                </div>

                <!-- all users -->
                <div class="popup-people-all mt-2 flex h-[calc(100%-6rem)] grow flex-col overflow-y-auto">
                  <% peopleToAdd.forEach(element=> { %>
                    <div class="popup-people" data-id="<%= element._id %>"
                      data-element="<%= btoa(JSON.stringify(element)) %>" onclick="addPeopleToChat(this)">
                      <% if(element.profilePic){ %>
                        <img src="<%=element.profilePic %>" alt="User" />
                        <% } else{ %>
                          <img
                            src="https://avatar.iran.liara.run/username?username=<%= element.fullName.replace(' ', '+') %>"
                            alt="User" />
                          <% } %>
                            <h3>
                              <%= element.fullName %>
                            </h3>
                    </div>
                    <% }) %>
                      <!-- <div class=" popup-people">
                  <img src="/assets/logo.jpeg" alt="User" />
                  <h3>Sekiro</h3>
                </div> -->
                </div>
              </div>
            </div>
          </div>

          <!-- all messages title -->
          <div class="ml-6 text-2xl font-bold max-lg:text-lg max-md:text-base max-sm:text-sm">
            <h1>All Messages</h1>
          </div>

          <!-- peoples -->
          <div id="people-parent" class="people-parent ml-6 mr-2 mt-2 overflow-y-auto *:bg-transparent">
            <% if (currentChatPeople) { %>
              <% currentChatPeople.forEach((element)=> { %>
                <div class="people-child" data-element="<%= btoa(JSON.stringify(element)) %>"
                  onclick="chatClicked(this)">
                  <div class="chats_img indicator">
                    <span
                      class="indicator-item badge badge-success h-2 p-[0.4rem] translate-x-[5%] translate-y-[10%] hidden status"></span>
                    <% if(element.profilePic){ %>
                      <img src="<%= element.profilePic %>" alt="<%= element.fullName %>" />
                      <% } else{ %>
                        <img
                          src="https://avatar.iran.liara.run/username?username=<%= element.fullName.replace(' ', '+') %>"
                          alt="User" />
                        <% } %>
                  </div>

                  <div class="people_name_parent">
                    <h4 class="people_name">
                      <%= element.fullName %>
                    </h4>
                  </div>

                  <% const unreadMsg=unreadMesseges.find((msg)=> msg.senderId.toString() === element._id.toString()); %>
                    <% if (unreadMsg && unreadMsg.unreadCount !=0) { %>
                      <div class="unread-badge absolute right-8">
                        <div class="badge badge-accent">
                          <%= unreadMsg.unreadCount %>
                        </div>
                      </div>
                      <% } else { %>
                        <div class="unread-badge absolute right-8 hidden">
                          <div class="badge badge-accent">0</div>
                        </div>
                        <% } %>
                </div>
                <% }) %>
                  <% } %>
                    <!-- people-1 -->
                    <!-- <div class="people-child" onclick="chatClicked(this)">
            <div class="chats_img">
              <img src="/assets/logo.jpeg" alt="User" />
            </div>
            <div class="people_name_parent">
              <h4 class="people_name">Emma</h4>
              <div class="last-msg">
                <p>Lorem ipsum dolor sit amet.</p>
              </div>
            </div>
          </div> -->
          </div>
        </div>

        <!-- right bar - all chats -->
        <div class="all_chats_container absolute right-0 flex h-full w-3/4 flex-col gradvioletrev">
          <!-- chats head -->
          <div id="chats-head"
            class="chats-head absolute top-0 flex hidden h-16 w-full flex-row items-center justify-between shadow-2xl bg-[#b2aef4]">
            <!-- to user profile -->
            <div class="to-user-profile ml-4 flex flex-row items-center justify-center space-x-3">
              <div class="chats_img flex h-10 w-10 items-center justify-center rounded-full indicator">
                <span
                  class="indicator-item badge badge-success h-2 p-1 translate-x-[5%] translate-y-[10%] hidden status"></span>
                <a href="#">
                  <img id="chat-head-img" src="/assets/logo.jpeg" alt="User" />
                </a>
              </div>
              <div class="text-lg font-semibold">
                <a href="#">
                  <h1 id="chat-head-name">Emma</h1>
                </a>
              </div>
            </div>

            <!-- alert -->
            <div role="alert"
              class="alert absolute right-18 hidden h-12 w-80 p-[0.7rem] justify-center items-center font-medium border-2 border-solid border-[#9376E0] text-[#3c096c]">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class=" shrink-0 w-6 h-6"
                stroke="#9376e0">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Deleted Message For Both</span>
            </div>

            <!-- to user info -->
            <div class="mr-4">
              <!-- to user info btn -->
              <div id="to-user-info-btn"
                class="to-user-info-btn z-30 h-9 w-9 cursor-pointer hover:scale-110 hover:duration-200">
                <svg width="35px" height="35px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"
                  class="icon">
                  <use xlink:href="#icon-info"></use>
                </svg>
              </div>

              <!-- to user info popup -->
              <div id="to-user-info-popup"
                class="absolute right-4 top-14 z-30 hidden h-58 w-64 flex-col rounded-lg bg-bodybg border-2 border-black">
                <!-- name & username -->
                <div class="mt-1 flex h-18 cursor-pointer border-b-2 border-black pl-2">
                  <img src="/assets/logo.jpeg" alt="User" class="ml-2 mt-2 h-14 w-14 rounded-full p-1" />
                  <div class="ml-3 mt-4 flex flex-col">
                    <h3 class="mb-[-4px] text-base font-bold">Emma</h3>
                    <h4 class="mt-0 text-sm font-medium">@emma123</h4>
                  </div>
                </div>

                <div class="mt-3 flex flex-col items-center justify-center space-y-1 *:p-1 *:*:font-semibold">
                  <!-- Block -->
                  <!-- <a href="#" class="mx-2 flex h-10 w-60 items-center justify-center rounded-md hover:bg-[#dee2ff]">
                    
                  </a> -->
                  <div id="block-to-user"
                    class="mx-2 flex h-10 w-60 items-center justify-center rounded-md hover:bg-[#dee2ff] hover:cursor-pointer"
                    onclick="blockUnblockUser(this)">
                    <h3>Block</h3>
                  </div>

                  <!-- Report -->
                  <a href="#" class="mx-2 flex h-10 w-60 items-center justify-center rounded-md hover:bg-[#dee2ff]">
                    <div id="report-to-user">
                      <h3>Report</h3>
                    </div>
                  </a>

                  <!-- Delete Conversation -->
                  <a href="#" class="mx-2 flex h-10 w-60 items-center justify-center rounded-md hover:bg-[#dee2ff]">
                    <div id="delete-chat-to-user" onclick="deleteConversation()">
                      <h3>Delete Conversation</h3>
                    </div>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- all chats -->
          <div id="all-chats" class="absolute top-16 h-[calc(100%-8rem)] w-full *:bg-transparent">
            <div id="chat-section" class="chat-section hidden">
              <!-- profile info of to-user -->
              <div class="to-user-profile-sec">
                <!-- to-user-profile-sec-img -->
                <a href="#">
                  <div class="to-user-profile-sec-img">
                    <img src="/assets/logo.jpeg" alt="To User" />
                  </div>
                </a>

                <!-- to-user-profile-sec-name -->
                <a href="#">
                  <div class="to-user-profile-sec-name">
                    <h1>Emma</h1>
                    <h3>@emma123</h3>
                  </div>
                </a>
              </div>
              <!-- messages -->
              <div id="messages" class="messages">
                <div class="message-container">
                  <!-- <div class="day">
                  <div class="date">
                    <h1>23 Feb, 2024</h1>
                  </div>
                </div> -->
                  <!-- <div class="to-user-msg">
                  <div class="msg-container">
                    <p>Hi</p>
                    <span>11:11</span>
                  </div>
                  <div class="pl-2 delete-msg-btn hidden">
                    <button class="btn btn-circle btn-outline btn-secondary h-6 w-6 min-h-4 group">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 group-hover:stroke-[#9376E0]" fill="none" viewBox="0 0 24 24" stroke="#dee2ff">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    </button>
                  </div>
                </div> -->

                  <!-- <div class="from-user-msg">
                  <div class="pr-2 delete-msg-btn hidden">
                    <button class="btn btn-circle btn-outline btn-accent h-6 w-6 min-h-4 group">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 group-hover:stroke-[#dee2ff]" fill="none" viewBox="0 0 24 24" stroke="#9376E0">
